<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.cetis108.cetis108_app005.ArchivoEditar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del archivo"/>
        <EditText
            android:id="@+id/txtTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de archivo"/>
        <EditText
            android:id="@+id/txtRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ruta del archivo"/>
        <EditText
            android:id="@+id/txtTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba aquí el contenido..."/>
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:onClick="btnGuardarClick"/>
        <!--Estos WebView son para hacer más sencilla
        la inserción de datos a la Base de Datos-->
        <WebView
            android:layout_width="0px"
            android:layout_height="0px"
            android:id="@+id/webAcceder"></WebView>
        <WebView
            android:layout_width="0px"
            android:layout_height="0px"
            android:id="@+id/webContenido"></WebView>
    </LinearLayout>
</ScrollView>
